<article>
  <header>
    <h2><%= post.title %></h2>
  </header>
  <section class="body">
    <%= raw post.body %>
  </section>
  <footer>
    <p>
      Posted on <%= post.created_at.to_formatted_s(:long) %>
      <a class="permalink" href="<%= permalink_for post %>">Permalink</a>
    </p>
  </footer>
</article>
