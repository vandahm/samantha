<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <%= stylesheet_link_tag    "admin", media: "all" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#admin-top-nav">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Admin', [:admin, :root], class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse" id="admin-top-nav">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'Posts', admin_posts_path %>
          </li>
          <li>
            <%= link_to 'Categories', admin_categories_path %>
          </li>
          <li>
            <%= link_to 'Users', admin_users_path %>
          </li>
        </ul>

        <!-- copy/paste -->
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Link</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
        <!-- end copy/paste -->
      </div> <!-- navbar-collapse -->
    </div> <!-- container-fluid -->
  </nav>

  <div class="container">
    <h1>Admin Panel</h1>
    <%= yield %>
  </div>
</body>
</html>
